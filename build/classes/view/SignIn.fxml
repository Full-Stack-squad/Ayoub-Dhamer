<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignInController">
   <children>
      <BorderPane style="-fx-background-color: #1f1f22;">
         <top>
            <AnchorPane focusTraversable="true" style="-fx-border-color: #50c9ba; -fx-border-width: 0.2;" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="20.0" prefHeight="50.0" prefWidth="165.0" text="Sign In" textAlignment="CENTER" textFill="#f2f2f2">
                     <font>
                        <Font name="Calibri" size="34.0" />
                     </font>
                     <graphic>
                        <Line endX="-102.00001525878906" endY="70.29289245605469" fill="#fabe2e" startX="-101.99999237060547" startY="44.60301971435547" stroke="#fabe2e" style="-fx-stroke-width: 7;" />
                     </graphic>
                  </Label>
                  <TextField fx:id="email" layoutX="100.0" layoutY="99.0" prefHeight="25.0" prefWidth="184.0" promptText="UserName/email" style="-fx-background-color: transparent; -fx-border-color: #000000; -fx-border-width: 0px 0px 2px 0px;">
                     <effect>
                        <Glow />
                     </effect>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="password" layoutX="100.0" layoutY="168.0" prefHeight="27.0" prefWidth="184.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #000000; -fx-border-width: 0px 0px 2px 0px;" />
                  <Button fx:id="btn_signIn" layoutX="130.0" layoutY="250.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="124.0" style="-fx-background-color: #1f1f22; -fx-border-color: #fabe1e; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 12;" text="Login" textFill="WHITE" textOverrun="CLIP">
                     <effect>
                        <Glow />
                     </effect>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Hyperlink fx:id="forget" layoutX="240.0" layoutY="332.0" text="Forget your password ?" textAlignment="CENTER" textFill="#fabe1e" />
               </children>
            </AnchorPane>
         </top>
      </BorderPane>
   </children>
</VBox>
